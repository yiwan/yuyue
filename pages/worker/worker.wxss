page{background-color: #eee}
.user-info{height: 150rpx;display: flex;align-items: center;background-color: white}
.user-info image{width: 100rpx;height: 100rpx;border-radius: 50%;overflow: hidden;margin-left: 45rpx}
.user-info text{margin-left: 10rpx}
.user-info button{margin: 0;width: 232rpx;font-size: 14px;font-weight: normal;background-color:#03a9f4;margin-left: 10rpx;color: white }
.user-list-item{height: 100rpx;display: flex;align-items: center;justify-content: space-between;background-color: white;line-height: 100rpx;font-size:16px;margin-top: 10px;}
.number{margin-left: 16rpx}
.icon-fanhui{margin-right: 10rpx}
.userinfo-nickname {
  color: #000;

}
button::after{
	border: none;
}
#scan{
	width: 100%;
	height: 100rpx;
	text-align: unset;
	line-height: 100rpx;
	background-color: white;
	color: #000;
	font-size: 16px;
	display: flex;
	align-items: center;
	justify-content: space-between;
	margin-top: 10px;
	padding-left: 1px;
	padding-right: 0;
}
image{
	width: 6.25rem;
	height: 6.25rem;
	border-radius: 50%;
	}
	
	
	
	.footer{
		background-color: #03a9f4;
		position: fixed;
		bottom: 0;
		width: 100%;
		height: 3.125rem;	
	}
	.footer ul{
		width: 100%;
		height: 3.125rem;
		display: flex;
	}
	.footer ul li{
		width: 50%;
		text-align: center;
		height: 3.125rem;
		margin-left: 2.5%;
		margin-right: 2.5%;
		color: #ffffff;
	}
	.footer ul li text:first-child{
		font-size: 1.25rem;
		display: inline-block;
		width: 100%;
		height: 1.25rem;
		line-height: 1.25rem;
		padding-top: 0.3125rem;
	}
	.footer ul li text:last-child{
		font-size: 0.75rem;
		display: inline-block;
		width: 100%;
		height: 0.9375rem;
		line-height: 0.9375rem;
	}
	
	
	