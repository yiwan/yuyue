/* pages/invite/invite.wxss */
page{
	background-color: #eee;
}
.invite{
	width: 100%;
	min-height: 200rpx;
}
/* 搜索框样式 */
.search
{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
  width:100%;
  height:100rpx;
  background-color:#eee;
  margin-top: 1%;
  border:1rpx solid whitesmoke;
  border-radius: 5rpx;
  margin-bottom: 10px;
}
/* 搜索框提示文字样式 */
.search input
{
	width: 100%;
	height: 100rpx;
  font-size:16px;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left:30rpx; 
  background-color: white;
}
.inviteList{
	width: 97%;
	min-height: 150rpx;
	background-color: white;
	line-height: 75rpx;
	padding-left: 10px;
	border: 1px dashed #03a9f4;
	margin-bottom: 5px;
	border-radius: 10px;
}
.inviteList button{
	width: 30%;
	height: 57rpx;
	background-color: #03a9f4;
	color: white;
	line-height: 50rpx;
	margin-bottom: 10px;
}
.phone{
	display: flex;
}
